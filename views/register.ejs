<div class="container">
  <div class="content">
    <div class="inner-content register-content">
      <div class="title">
        <h1>Register</h1>
      </div>
      <div class="details">
        <%- include('./partials/messages'); %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
            />
          </div>
          <button type="submit" class="btn">
            Register
          </button>
        </form>
      </div>
      <div class="redirect">
        <p>Already have an account?</p>
        <a href="/users/login" class="btn2">
          LOGIN
        </a>
      </div>
    </div>
  </div>
</div>
